<div class="log-in">
  <h4>Iniciar sesion (solo para socios)</h4>
  <p>Consultas: <a href="mailto:youremailaddress">info.lamebo@gmail.com</a></p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ingresar" , class: "btn btn-primary btn-lg"%>
    <br>
    <br>
  </div>
<% end %>

