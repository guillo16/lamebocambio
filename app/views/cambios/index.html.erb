<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://res.cloudinary.com/dw7ox75dg/image/upload/v1555105423/Lamebo_0419_Baja-9339.jpg);">
  <div class="container">
    <p>Agencia de Cambio</p>
    <h1>Bienvenidos</h1>
    <h3> La mejor agencia de cambio del pais con la mejor atencion y los mejores precios</h3>
  </div>
</div>
<section id= "cotizaciones">
  <div class="description">
    <h1>&nbsp;&nbsp;Cotizaciones</h1>
    <div class="cotizacion-container">
      <% @cambios.each do |cambio| %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Moneda</th>
            <th scope="col"></th>
            <th scope="col">Compra</th>
            <th scope="col">Venta</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><img src="https://res.cloudinary.com/dw7ox75dg/image/upload/v1554760381/flag-usa.jpg" alt=""> <br>Dolar </td>
            <td></td>
            <td>$<%= cambio.dolarc %></td>
            <td>$<%= cambio.dolarv %></td>
          </tr>
          <tr>
            <td><img src="https://res.cloudinary.com/dw7ox75dg/image/upload/v1554760381/flag-euro.jpg" alt=""><br>Euro</td>
            <td></td>
            <td>$<%= cambio.euroc %></td>
            <td>$<%= cambio.eurov %></td>
          </tr>
          <tr>
            <td><img src="https://res.cloudinary.com/dw7ox75dg/image/upload/v1554760381/flag-br.jpg" alt=""><br>Real</td>
            <td></td>
            <td>$<%= cambio.realc %> </td>
            <td>$<%= cambio.realv %></td>
          </tr>
          <tr>
            <td><img src="https://res.cloudinary.com/dw7ox75dg/image/upload/v1554760381/flag-ur.jpg" alt=""> <br>Uruguayo </td>
            <td></td>
            <td>$<%= cambio.uruguayo %></td>
            <td>$<%= cambio.uruguayov %></td>
          </tr>
        </tbody>
      </table>
      <div class="dolar-footer">
        <p>Actualizado: <%= cambio.updated_at.in_time_zone("Buenos Aires").strftime('%d/%m/%y - %H:%M') %> - <%= link_to 'Lamebo',cambio_path(cambio) %> </p>
      </div>
      <% end %>
    </div>
  </div>
</section>
